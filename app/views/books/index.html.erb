<h1>Listing books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user.books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= link_to 'Show', [@user, book] %></td>
    <td><%= link_to 'Edit', edit_user_book_path(@user,book) %></td>
    <td><%= link_to 'Destroy', [@user, book], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

